{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "*": ["*", "src/*"]
        },
        "outDir": "./dist",
        "lib": ["dom", "es2017"],
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "sourceMap": true,
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "jsxFactory": "h"
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"]
}
